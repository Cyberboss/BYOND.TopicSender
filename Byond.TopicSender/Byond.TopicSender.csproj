<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>2.0.0</Version>
    <Company />
    <Authors>Cyberboss</Authors>
    <Description>Send packets to Byond servers formatted for calling /world/Topic()</Description>
    <PackageProjectUrl>https://Cyberboss.github.io/Byond.TopicSender</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Cyberboss/Byond.TopicSender</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageReleaseNotes>.NET Standard 2.1.\nImprove string sanitization.</PackageReleaseNotes>
    <PackageLicenseUrl>https://github.com/Cyberboss/Byond.TopicSender/blob/master/LICENSE</PackageLicenseUrl>
    <PackageTags>byond topic packet sender</PackageTags>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <DocumentationFile>bin\Release\netstandard2.1\Byond.TopicSender.xml</DocumentationFile>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>latest</LangVersion>
    <DebugType>Full</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.6.0">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

</Project>
